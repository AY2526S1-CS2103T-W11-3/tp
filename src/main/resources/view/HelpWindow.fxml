<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root type="javafx.stage.Stage"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1"
         title="Help"
         resizable="false">

    <icons>
        <Image url="@/images/help_icon.png" />
    </icons>

    <scene>
        <Scene>
            <!-- Apply global dark theme CSS to match the main window -->
            <stylesheets>
                <URL value="@DarkTheme.css" />
                <URL value="@Extensions.css" />
            </stylesheets>

            <VBox alignment="TOP_CENTER" spacing="10.0"
                  style="-fx-background-color: #2b2b2b; -fx-padding: 20;">
                <children>

                    <TextArea fx:id="helpMessage"
                              editable="false"
                              wrapText="true"
                              prefWidth="700.0"
                              prefHeight="600.0"
                              style="-fx-font-family: 'Consolas';
                                     -fx-font-size: 13px;
                                     -fx-control-inner-background: #3c3f41;
                                     -fx-text-fill: #f0f0f0;
                                     -fx-background-radius: 10;
                                     -fx-border-radius: 10;
                                     -fx-border-color: #555555;
                                     -fx-border-width: 1;" />

                </children>
                <padding>
                    <Insets top="15.0" right="15.0" bottom="15.0" left="15.0" />
                </padding>
            </VBox>
        </Scene>
    </scene>
</fx:root>
