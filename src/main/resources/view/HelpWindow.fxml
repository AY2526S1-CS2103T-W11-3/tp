<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Help" type="javafx.stage.Stage"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">

    <icons>
        <Image url="@/images/help_icon.png" />
    </icons>

    <scene>
        <Scene>
            <stylesheets>
                <URL value="@HelpWindow.css" />
            </stylesheets>

            <VBox fx:id="helpMessageContainer" alignment="TOP_CENTER" spacing="10.0">
                <children>
                    <!-- Multiline, scrollable help text -->
                    <TextArea fx:id="helpMessage"
                              editable="false"
                              wrapText="true"
                              prefWidth="600.0"
                              prefHeight="500.0"
                              style="-fx-font-family: 'Consolas'; -fx-font-size: 12px;" />

                    <!-- Copy URL button -->
                    <Button fx:id="copyButton"
                            text="Copy User Guide URL"
                            mnemonicParsing="false"
                            onAction="#copyUrl"
                            maxWidth="200.0" />
                </children>

                <padding>
                    <Insets top="15.0" right="15.0" bottom="15.0" left="15.0" />
                </padding>
            </VBox>
        </Scene>
    </scene>
</fx:root>
