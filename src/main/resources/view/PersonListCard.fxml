<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.StackPane?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <StackPane HBox.hgrow="ALWAYS">
      <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" spacing="2" GridPane.columnIndex="0">
          <padding>
            <Insets top="5" right="5" bottom="5" left="15" />
          </padding>
          <HBox spacing="0.5" alignment="CENTER_LEFT">
            <Label fx:id="id" styleClass="cell_big_label" style="-fx-padding: 0 0 5 0;">
              <minWidth>
                <!-- Ensures that the label text is never truncated -->
                <Region fx:constant="USE_PREF_SIZE" />
              </minWidth>
            </Label>
            <Label fx:id="name" text="\$first" styleClass="cell_big_label" style="-fx-padding: 0 0 5 0;" />
          </HBox>
          <FlowPane fx:id="tags" />
          <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
          <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
          <Label fx:id="email" styleClass="cell_small_label" text="\$email" style="-fx-padding: 0 0 5 0;"/>
          <Label fx:id="discordHandle" styleClass="label-discord" text="\$discordHandle" style="-fx-text-fill: #aaaaaa"/>
          <Label fx:id="linkedInProfile" styleClass="label-linkedin" text="\$linkedInProfile" style="-fx-text-fill: #aaaaaa"/>
          <Label fx:id="instagramHandle" styleClass="label-instagram" text="\$instagramHandle" style="-fx-text-fill: #aaaaaa"/>
          <Label fx:id="youTubeChannel" styleClass="label-youtube" text="\$youTubeChannel" style="-fx-text-fill: #aaaaaa"/>
        </VBox>
      </GridPane>
        <!-- Priority label on top right -->
        <Label fx:id="priority" styleClass="label-priority" text="\$priority"
               style="-fx-text-fill: white; -fx-padding: 5 3 5 0;"
               StackPane.alignment="TOP_RIGHT" />
    </StackPane>
</HBox>
